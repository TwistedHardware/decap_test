---
import { getEntry } from "astro:content";

const { slug } = Astro.props;

const article = await getEntry("support_articles", slug);

if (!article) {
	throw new Error(
		`Could not find the '${slug}' page in the 'products' content collection.`,
	);
}

const BASE_URL = import.meta.env.BASE_URL;
const articleLink = `${BASE_URL}/support/${article.slug}`;
---
<div class="max-w-sm bg-white border border-zinc-200 rounded-lg shadow-sm dark:bg-zinc-800 dark:border-zinc-700">
    <a href={articleLink}>
        <img class="rounded-t-lg" src=`${BASE_URL}${article.data.thumbnail}` alt="" />
    </a>
    <div class="p-5">
        <a href={articleLink}>
            <h5 class="mb-2 text-2xl font-bold tracking-tight text-zinc-900 dark:text-white">{article.data.title}</h5>
        </a>
        <p class="mb-3 font-normal text-zinc-700 dark:text-zinc-400">{article.data.abstract}</p>
        <a href={articleLink} class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
            Read more
             <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
            </svg>
        </a>
    </div>
</div>
