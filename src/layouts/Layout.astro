---
import '@/styles/global.css'
import NavMenu from '@/components/NavMenu.astro'
import Footer from '@/components/Footer.astro'

const { title, lang="en", slug } = Astro.props;
const displayTitle = title ? `${title} | Tejory Wallet` : "Tejory Wallet";

const rtl = {
	"ar":"rtl",
}

const rtlDirections: { [key: string]: 'rtl' } = {
  ar: 'rtl',
};

const direction = rtlDirections[lang] ?? 'ltr'; 

const BASE_URL = import.meta.env.BASE_URL;
---
<!doctype html>
<html lang={lang} dir={direction} class="dark">
  <head>
    <meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="preconnect" href=`${BASE_URL}/static/fonts/ArabicUIDisplayBold.otf`>
		<link rel="icon" type="image/x-icon" href=`${BASE_URL}/favicon.png`>
    <title>{displayTitle}</title>
  </head>
  <body class="flex flex-col min-h-screen">
		<NavMenu lang={lang} currentSlug={slug} />
		<main class="flex-grow pt-[72px]">
			<slot />
		</main>
		<Footer />
  </body>
</html>